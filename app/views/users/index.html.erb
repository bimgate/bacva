
<h1>Prikaz korisnika</h1>

<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>

<table style="color:white; border-spacing:50px 50px; border-collapse: separate">
  <thead>
    <tr>
      <th>Ime:</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>  
            
        
        <td><%= link_to 'Edit', edit_user_path(user), :class=>"btn btn-primary" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj novog korisnika', new_user_path, :class=>"btn btn-primary" %>
