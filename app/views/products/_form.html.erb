<%= form_for(@product, :html => {:multipart => true, :class => "form-horizontal center"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="form-group">  
    <%= f.label :title, "Ime:", class: "col-md-3 control-label" %><br>
    <div class="col-md-8">
    <%= f.text_field :title, class: "form-control" %>
    </div>
</div>

<div class="form-group">  
    <%= f.label :description, "Opis:", class: "col-md-3 control-label" %><br>
    <div class="col-md-8">
    <%= f.text_area :description, class: "form-control" %>
    </div>
</div>
  
<div class="form-group">  
    <%= f.label :price, "Cena:", class: "col-md-3 control-label" %><br>
    <div class="col-md-8">
    <%= f.text_field :price, class: "form-control" %>
    </div>
</div>

<div class="form-group">  
<%= f.label :picture, "Slika:", class: "col-md-3 control-label" %></br>
<div class="col-md-8">

<%= f.file_field :picture, :multipart => true %>

 </div>
</div>

<div class="form-group">
      <label for="type_of_wine">Vrsta vina:</label>
      <% [ 'Crveno vino', 'Belo vino', 'Ruzicasto vino'].each do |type_of_wine| %>
      
   </br><%= f.radio_button :type_of_wine, type_of_wine, :checked => (@type_of_wine == type_of_wine)%>
          
      <%= type_of_wine.humanize %></br>
    <% end %>

    </br>
  </div>

 
  <%= f.submit "Snimi proizvod", class: "btn btn-default btn-primary" %>
  
<% end %>
