<% if notice %>
<p id ="notice"><%= notice %></p>
<% end %>


<h1>Katalog ponude</h1> 

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>   
    <%=sanitize product.description %>
    <div class ="price_line">
    <span class="price"><%= sprintf("RSD%0.02f", product.price) %></span>
      <!--<span class="price"><%= number_to_currency(product.price) %></span>-->
      <%= button_to 'Dodaj u korpu', line_items_path(:product_id => product), method: 'post', :remote => true %> <!-- AJAX POZIV-->   


    </div> 

  </div>

  <% end %>

  <div class="bottle_paginate">
  
  <%= will_paginate @products, :previous_label => "Prethodna", :next_label => "Sledeca" %>
  
  </div>
