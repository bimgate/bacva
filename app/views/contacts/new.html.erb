<% if notice %>
<p id ="notice"><%= notice %></p>
<% end %>

<div align="center">
  <h3>Kontaktirajte nas</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>


    <div class="form-group">
        <%= f.label :name, "Ime:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :name, :required => true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-5">
          <%= f.text_field :email, :required => true, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :message, "Poruka:", class: "col-md-4 control-label" %>
        <div class="col-md-6">
          <%= f.text_area :message, :as => :text, :required => true, class: "form-control" %>
        </div>
      </div>
    
    <div>
      </br>
      <%= f.button :submit, 'PoÅ¡alji poruku', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>


